@{
    ViewBag.Title = "Index.cshtml";
}
<script>
var homeController = new HomeController();
if (homeController.getId() == null){
    @{Response.Redirect("~/Home/Login");}
}
else{
    homeController.RetrieveMyFeedsFromFacebook();
}
</script>
<div class=" = container">
    <div class="row">
        <div class="col-lg-3">
            <img src="~Images\march-calendar-2015.png" style="width:30%; height:30%">
            <h2>Upcoming Events</h2>
        </div>
        <div class="col-lg-6">
            <textarea style="width: 30%; padding: 4px; margin: 0;" rows="8" cols="80" name="message" id="message" tabindex="1"></textarea>
            <button type="submit" class="btn btn-success">Post</button>
            <h2>Newsfeed</h2>
            <div class="newsfeed">


            </div>
        </div>
        <div class="col-lg-3">
            <h2>Top Stocks</h2>
            <table class="table table-striped" style="width:30%; height:30%">
                <thead>
                    <tr>
                        <th>Stock Name</th>
                        <th>Price</th>
                        <th>Shares</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <p class="link">@Html.ActionLink("View More Stock Info...", "AllStocks", "Home")</p>
            <h2>Friends</h2>
        </div>
    </div>
</div>